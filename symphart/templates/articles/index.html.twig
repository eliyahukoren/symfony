{% extends 'base.html.twig' %}

{% block title %}SymfoElik Articles{% endblock  %}

{% block body %}
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                <th>Article Title</th>
                <th class="row__align--end row__pading">Actions</th>
                </tr>
            </thead>

            <tbody>
                {% for article in articles %}
                <tr>
                    <td><a href="/article/{{ article.id }}">{{ article.title }}</a></td>
                    <td class="row__align--end">
                    <a href="/article/{{ article.id }}" class="btn btn-info">Show</a>
                    <a href="/article/edit/{{ article.id }}" class="btn btn-light">Edit</a>
                    <a href="javascript:void(0)" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles to display</p>
    {% endif %}
        <a href="/article/new" class="btn btn-primary">New Article</a>
{% endblock  %}
{% block javascript %}
        <script src="/js/main.js"></script>
{% endblock  %}
